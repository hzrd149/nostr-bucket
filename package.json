    "start:firefox": "web-ext run --source-dir ./dist/"
  },
  "dependencies": {
    "applesauce-loaders": "^4.0.0",
    "applesauce-relay": "^4.0.0",
    "nostr-idb": "0.0.0-20251003110238",
