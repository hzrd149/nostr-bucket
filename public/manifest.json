{
  "manifest_version": 3,
  "name": "Nostr Bucket",
  "version": "1.0.0",
  "description": "Provides a simple nostr event cache to all web applications",
  "author": "hzrd149",
  "homepage_url": "https://github.com/hzrd149/nostr-bucket",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "incognito": "spanning",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Nostr Bucket"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "16.png",
    "24": "24.png",
    "48": "48.png",
    "128": "128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js", "inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "@nostr-bucket.hzrd149",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
