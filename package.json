{
  "name": "nostr-bucket",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "package:chrome": "pnpm build && cd dist && zip -r ../nostr-bucket-chrome.zip .",
    "package:firefox": "pnpm build && cd dist && zip -r ../nostr-bucket-firefox.zip .",
    "start:firefox": "web-ext run --source-dir ./dist/"
  },
  "dependencies": {
    "nostr-idb": "^2.4.0",
    "nostr-tools": "^2.17.0",
    "solid-js": "^1.9.9",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/webextension-polyfill": "^0.12.4",
    "esbuild": "^0.25.10",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vite": "^7.1.7",
    "vite-plugin-solid": "^2.11.8",
    "web-ext": "^8.10.0"
  },
  "packageManager": "pnpm@9.15.6"
}
